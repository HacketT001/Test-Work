<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/contact_activity_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/contact_activity_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/contact_activity_delete"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/ic_create_white_24dp" />

        <ImageView
            android:id="@+id/contact_activity_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/ic_delete_forever_white_24dp" />

        <ImageView
            android:id="@+id/contact_activity_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_person_white_24dp" />

        <TextView
            android:id="@+id/contact_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_activity_image"
            android:layout_centerHorizontal="true"
            android:text="VLADYSLAV BOIKO"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_activity_header">

        <TextView
            android:id="@+id/contact_activity_caption_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="@string/contact_activity_phonenumber"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contact_activity_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_activity_caption_phone"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="0932720284"
            android:textSize="30sp" />
        <View
            android:id="@+id/contact_activity_separator"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/contact_activity_phone"
            android:layout_marginTop="10dp"
            android:background="#9000"/>

        <TextView
            android:id="@+id/contact_activity_caption_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_activity_separator"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="@string/contact_activity_email"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contact_activity_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_activity_caption_email"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="vladyslavboiko98@gmail.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contact_activity_caption_secondphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_activity_email"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Second phone"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contact_activity_seconphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_activity_caption_secondphone"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="050050505050"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>